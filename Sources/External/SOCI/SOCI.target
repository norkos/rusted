TARGET:=SOCI
TYPE:=custom

SOCI_PACKAGE_NAME:=soci-3.2.1.tar.gz
SOCI_SRC:=$(TARGET_BASE)/soci-3.2.1/
SOCI_DIR:=$(BUILD)/SOCI/
SOCI_ARTEFACT:=$(BUILD)/libsoci_core.so.3.2.1

.PHONY: SOCI
SOCI: $(SOCI_ARTEFACT)

$(SOCI_ARTEFACT):
	mkdir -p $(SOCI_DIR)
	cd $(BUILD)/SOCI && \
		cmake $(SOCI_SRC) && \
		make
	cp -v $(SOCI_DIR)/lib/* $(BUILD)

